{
  "compileOnSave": false,
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "import": ["src/**/*"],
  "exclude": ["node_modules"]
}
