{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true

  },
  "include": ["node_modules/react-scripts", "src"],
  "exclude": ["node_modules", "tmp", "dist"]
}
